{
  "manifest_version": 2,
  "name": "Notify Me",
  "description": "Get product price with timely notification",
  "version": "1.0.0",
  "icons": { "128": "icon_128.png" },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "notifications",
    "http://www.example.com/*",
    "https://www.myntra.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  }
}
